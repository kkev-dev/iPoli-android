<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rpEvery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Every"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/md_dark_text_54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Every" />

    <Spinner
        android:id="@+id/rqFrequency"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:dropDownWidth="wrap_content"
        android:entries="@array/repeating_quest_frequencies"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintStart_toEndOf="@+id/rpEvery"
        app:layout_constraintTop_toTopOf="@+id/rpEvery" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="x"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/md_dark_text_54"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintStart_toEndOf="@+id/rqFrequency"
        app:layout_constraintTop_toTopOf="@+id/rpEvery"
        tools:text="x" />

    <Spinner
        android:id="@+id/rqCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/rpEvery" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="times"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/md_dark_text_54"
        app:layout_constraintBottom_toBottomOf="@+id/rpEvery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rqCount"
        app:layout_constraintTop_toTopOf="@+id/rpEvery"
        tools:text="times" />
</android.support.constraint.ConstraintLayout>